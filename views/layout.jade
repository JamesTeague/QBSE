doctype html
html
	head
		title= title
		link(rel="stylesheet" href="styles/bootstrap.min.css")
		link(rel="stylesheet" media="screen and (min-device-width: 800px)" href="styles/style.css")
		link(rel="stylesheet" media="screen and (max-device-width: 799px)" href="styles/mobile.css")
		link(rel="stylesheet" href="scripts/alertify_css/alertify_default.min.css")
		link(rel="stylesheet" href="scripts/alertify_css/alertify_core.min.css")
		script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js', type='text/javascript')
		script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular-cookies.js', type='text/javascript')
	body(ng-app="MainApp", ng-controller="MainCtrl")
		nav.navbar.navbar-inverse.navbar-fixed-top(role="navigation")
			.navbar-inner
				.container-fluid
					a.navbar-brand(href="/") QBSE
					button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
						span.sr-only Toggle navigation           
						span.icon-bar
						span.icon-bar
						span.icon-bar
					#navbar.navbar-collapse.collapse
						ul.nav.navbar-nav
							li.active: a(href="/") Market
						p.navbar-text.navbar-right(ng-if="authData") Signed in as 
							a#email_link.navbar-link(href="/myaccount") {{profile.name}}
						ul.nav.navbar-nav.navbar-right(ng-if="authData")
							li: button.btn.btn-default.navbar-btn(ng-click="logout()") Log Out
						ul.nav.navbar-nav.navbar-right(ng-if="!authData")
							li: a(href="/signup") Sign Up
							li.dropdown
								a.dropdown-toggle(data-toggle="dropdown", href="#") Sign in
									span.caret
								.dropdown-menu
									form#login_form(accept-charset="UTF-8", novalidate)
										.input-group
											span#addon1.input-group-addon @
											input#email.form-control(type="email", ng-model="useremail", placeholder="Email", aria-describedby="addon1")
										.input-group
											span#addon2.input-group-addon •••
											input#password.form-control(type="password", ng-model="userpassword", placeholder="Password", aria-describedby="addon2")
										br
										input.btn.btn-success.btn-block(type="submit", ng-click="login(useremail, userpassword)", value="Submit")
										input.btn.btn-warning.btn-block(type="button", ng-click="login(useremail, userpassword)", value="Forgot Password", onclick="forgotPassword()")
										hr
										.btn-group-vertical.btn-group-justified
											input.btn.btn-primary.btn-block(type="button", ng-click="thirdPartyLogin('facebook')", value="Facebook")
											input.btn.btn-danger.btn-block(type="button", ng-click="thirdPartyLogin('google')", value="Google")
											input.btn.btn-info.btn-block(type="button", ng-click="thirdPartyLogin('twitter')", value="Twitter")
		
		block content

		script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.5.2/underscore-min.js')
		script(src='https://cdn.firebase.com/js/client/1.1.1/firebase.js')
		script(src='https://cdn.firebase.com/libs/angularfire/1.0.0/angularfire.min.js')
		script(type='text/javascript', src='scripts/jquery-1.11.1.min.js')
		// Modules
		script(src='scripts/app.js')
		// Controllers
		script(src='scripts/angularControllers/MainController.js')
		script(src='scripts/bootstrap.min.js')
		// Alertify
		script(type='text/javascript', src='scripts/alertify.min.js')