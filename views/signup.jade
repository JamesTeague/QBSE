extends layout

block content
	.container
		form#login_form(novalidate, accept-charset="UTF-8")
			.input-group
				span#addon1.input-group-addon Name
				input.form-control(type="text", placeholder="First Last", aria-describedby="addon1", ng-model="newName")
			.input-group
				span#addon2.input-group-addon @
				input.form-control(type="text", placeholder="Email", aria-describedby="addon2", ng-model="addr")
			.input-group
				span#addon3.input-group-addon •••
				input.form-control(type="password", placeholder="Password", aria-describedby="addon3", ng-model="pword")
			.input-group
				span#addon3.input-group-addon •••
				input.form-control(type="password", placeholder="Verify Password", aria-describedby="addon3", ng-model="verify")
			input.btn.btn-success.btn-block(type="submit", value="Submit")